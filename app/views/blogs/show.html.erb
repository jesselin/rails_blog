<h1><%= @blog['name'] %></h1>
<h3><%= @blog['description'] %></h3>

<% if signed_in? %>
<% else %>
<% end %>

<% if signed_in? %>
	<a href="/blogs/<%= @blog['id'] %>/posts/new"><button class="btn btn-large btn-info">New Post</button></a>
<% else %>
<% end %>

<p class="notice"><%= notice %></p>
<p class="error"><%= error %></p>

<br>

<% @posts.each do |post| %>

	<p>Posted by 
		<%= @blog.users.first.first_name%> <%= @blog.users.first.last_name%>
		at <%= post['created_at'] %> - 
		<%= link_to 'Edit', edit_blog_post_path(@blog, post) %>
	</p>
	
	<div class="well">
    	<h4><%= post['title'] %></h4>
    	<p><%= post['content'] %></p>
    </div>

	<br> 
<% end %>

<br><br>

